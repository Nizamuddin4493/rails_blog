<div class="show_post_view">
    <div class="post-container">
        <div class="post-details-post">
        <h1>show posts of the user</h1>
            <h2>Post <%= @post.title %></h2>
            <span><%= @post.user.name %></span>
             <div class="post-count">
                <span>Comments: <%= @post.commentsCounter%><span>
                <span>Likes: <%= @post.likesCounter%><span>
            </div>
        </div>
        <div class="post-content">
            <p><%= @post.text %></p>
            <div class="post-date">Date: <%= @post.created_at %></div>
        </div>
    </div>
    <div class="post-comments">
        <% if @post.comments.size != 0 %>
            <ul class="comment-container">
                <% @post.comments.each do |comment| %>
                    <li><%= comment.user.name %>: <%= comment.text %></li>
                <% end %>
            </ul>
        <% end %>
    </div>
    <div class="add-comment-container">
        <%= link_to 'Comment', new_user_post_comment_path(user_id: @post.user_id, post_id: @post.id), class: 'btn' %>
    <%= form_with url: "/users/#{@post.user_id}/posts/#{@post.id}/likes" do |f| %>
      <%= f.submit 'Like', class: 'btn' %>
    <% end %>
    <%= link_to 'Back to posts', user_posts_path, class: 'btn' %>
    <div>
</div>